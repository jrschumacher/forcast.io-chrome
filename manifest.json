{
        "manifest_version": 2,
        "name": "Forcast.io",
        "description": "This extension gets the weather where you are",
        "version": "0.1",
        "permissions": [
          "https://api.forecast.io/",
          "alarms",
          "geolocation"
        ],
        "background": {
                "scripts": ["background.js"],
                "persistent": false
        },
        "browser_action": {
                "default_title": "No forecast yet",
                "default_icon": "icon.png",
                "default_popup": "popup.html"
        }
}
